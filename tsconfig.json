{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@modelcontextprotocol/sdk/dist/*": ["./node_modules/@modelcontextprotocol/sdk/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 