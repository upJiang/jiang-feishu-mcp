{
  "name": "jiang-feishu-mcp",
  "version": "1.0.0",
  "description": "飞书云文档MCP，用于拉取和转换飞书云文档",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "feishu-mcp": "./build/index.js"
  },
  "scripts": {
    "start": "node build/index.js",
    "start:http": "node build/http-server.js",
    "dev": "nodemon --exec node build/index.js",
    "dev:http": "nodemon --exec node build/http-server.js",
    "build": "tsc"
  },
  "files": [
    "build"
  ],
  "imports": {
    "@modelcontextprotocol/sdk/dist/server/index.js": "./node_modules/@modelcontextprotocol/sdk/dist/server/index.js",
    "@modelcontextprotocol/sdk/dist/server/stdio.js": "./node_modules/@modelcontextprotocol/sdk/dist/server/stdio.js",
    "@modelcontextprotocol/sdk/dist/server/sse.js": "./node_modules/@modelcontextprotocol/sdk/dist/server/sse.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.8.4",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "turndown": "^7.1.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.8.10",
    "@types/turndown": "^5.0.5",
    "nodemon": "^3.0.2",
    "typescript": "^5.2.2"
  }
}